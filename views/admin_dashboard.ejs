<!-- admin_dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            display: flex;
            font-family: Verdana, Geneva, Tahoma, sans-serif, sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 250px;
            height: 710px;
            background-color: rgb(4, 55, 86);
            color: white;
            padding: 20px;
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar a {
            display: block;
            padding: 10px;
            margin-bottom: 10px;
            text-decoration: none;
            color: #ddd;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #555;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
            display: flex;
            flex-direction: row; /* Updated to display in a row */
            justify-content: space-between; /* Adjust as needed */
            align-items: center;
        }

        h1, h2 {
            color: #333;
            margin: 10px 0;
        }

        .info-card {
            flex: 1;
            min-width: 200px;
            height: 90px;
            padding: 20px;
            margin: 10px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .user-card {
            background-color: #3498db; /* Blue color */
        }

        .book-card {
            background-color: #2ecc71; /* Green color */
        }

        .comment-card {
            background-color: #e74c3c; /* Red color */
        }

        .info-card h2 {
            margin-bottom: 10px;
            color: white;
        }
    </style>
</head>

<body>
    
    <div class="sidebar">
        <br>
        <a href="/admin_dashboard">Dashboard</a><br>
        <a href="/admin_books">Books</a><br>
        <a href="/admin_comments">Comments</a><br>
        <a href="/admin_users">Users</a><br>
        <a href="/logout">Logout</a><br>
    </div>

    <div class="content">
       <h1>WELCOME TO ADMIN DASHBOARD</h1><br>
        <div class="info-card user-card">
            <h2>User Count: <%= userCount %></h2>
        </div>

        <div class="info-card book-card">
            <h2>Book Count: <%= bookCount %></h2>
        </div>

        <div class="info-card comment-card">
            <h2>Comment Count: <%= commentCount %></h2>
        </div>
    </div>
</body>

</html>
