<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Books</title>

    <style>
        body {
            display: flex;
            font-family: Verdana, Geneva, Tahoma, sans-serif, sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            width: 2010px;
            height: 710px;
            background-color: rgb(4, 55, 86);
            color: white;
            padding: 20px;
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar a {
            display: block;
            padding: 10px;
            margin-bottom: 10px;
            text-decoration: none;
            color: #ddd;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #555;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        input[type="text"] {
            padding: 8px;
            margin-right: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        button {
            padding: 8px 16px;
            background-color: rgb(4, 55, 86);
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: rgb(4, 55, 86);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: rgb(4, 55, 86);
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .description-cell {
            max-height: 3.6em;
            overflow: hidden;
        }

        .description-content {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        #searchButton:hover {
            background-color: rgb(2, 97, 156);
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <br>
        <a href="/admin_dashboard">Dashboard</a><br>
        <a href="/admin_books">Books</a><br>
        <a href="/admin_comments">Comments</a><br>
        <a href="/admin_users">Users</a><br>
        <a href="/logout">Logout</a><br>
    </div>
    <div class="content">
        <h1>Books</h1>

        <div class="search-container">
            <input type="text" id="bookSearch" placeholder="Search by title, genre, author, etc.">
            <button id="searchButton" onclick="searchBooks()">Search</button>
        </div>

        <table id="booksTable">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Author</th>
                    <th>Publication Date</th>
                    <th>Description</th>
                    <th>Posted by</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                <tr>
                    <td><img src="/images/<%= book.image %>" alt="<%= book.user_username %>'s Image" width="50"
                            height="50"></td>
                    <td><%= book.title %></td>
                    <td><%= book.genre %></td>
                    <td><%= book.author %></td>
                    <td><%= book.publication_date %></td>
                    <td class="description-cell">
                        <div class="description-content"><%= book.description %></div>
                    </td>
                    <td>
                        <% if (book.user_username) { %>
                        <%= book.user_username %>
                        <% } else { %>
                        Unknown User
                        <% } %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        function searchBooks() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("bookSearch");
            filter = input.value.toUpperCase();
            table = document.querySelector("table");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1]; // Index 1 corresponds to the Title column
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
</body>

</html>
